{
    "mode":"train",
    "deterministic": false,
    "gpu_ids": "0",
    "cpu_threads": "4",
    "dataset_name": "TartanAir",
    "imshow": false,
    "save": true,
    "video": false,
    "lr_invalidation": true,
    
    "data": {
       "data_root": "D:\\TartanDatasetRepository\\TartanDataset",
       "npy_root": "./Data",
       "test_split": 0.1,
       "val_split": 1.0,
       "crop_size": [500, 400]
    },
    
    "model": {
        "which_model": "ActiveStereoNet",
        "max_disp": 144,
        "scale_factor": 8,
        "loss": "XTLoss"
    },
    
    "solver": {
        "batch_size": 2,
        "accumulate": 3,
        "refine_head_weight": 0.5,
        "lcn_weight": 1.0,
        "occluded_weight": 0.01, // the unvalid (out of range) pixels contribution to lose
        "optimizer_type": "adam",
        "lr_init": 5e-6,
        "gamma": 0.5,
        "SaveImagesInterval": 200,
        "milestones": [60000, 100000],
        "eval_steps": 3000,
        "save_steps": 1000,
        "max_steps": 120000,
        "exp_prefix": "Experiments",
        "save_eval": false,
        "resume_iter": 0,
        "model_name": "tartanair/unsupervised"
    }
